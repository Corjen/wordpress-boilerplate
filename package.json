{
  "name": "wordpress-gulp-webpack-composer-starter-pack",
  "version": "1.0.0",
  "description": "Starter pack for wordpress theme development. Includes gulp (with production build), webpack, composer, critical css, unit testing, linting, etc..",
  "main": "gulpconfig.js",
  "scripts": {
    "lint:js": "standard 'src/**/*.js'",
    "lint:scss": "scss-lint src/scss/",
    "lint": "npm run lint:scss && npm run lint:js",
    "clean:dist": "rm -rf dist && mkdir dist",
    "clean:build": "rm -rf public/wp-content/themes && mkdir public/wp-content/themes",
    "dev": "webpack-dev-server --config webpack.config.js --progress",
    "build": "npm run lint && npm run test && npm run clean:dist && npm run build:gulp && npm run build:webpack",
    "build:webpack": "NODE_ENV=production webpack -p --config webpack.production.config.js --cheap-module-source-map --progress",
    "build:gulp": "gulp build-production",
    "start": "npm run clean:build && gulp init && gulp",
    "commit": "git add dist/* && git commit -m 'New build' && git push",
    "release": "standard-version && git push --follow-tags && git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Corjen/wordpress-gulp-webpack-composer-starter-pack.git"
  },
  "author": "Corjen Moll",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Corjen/wordpress-gulp-webpack-composer-starter-pack/issues"
  },
  "homepage": "https://github.com/Corjen/wordpress-gulp-webpack-composer-starter-pack#readme",
  "devDependencies": {
    "assets-webpack-plugin": "^3.4.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "browser-sync": "^2.14.0",
    "fs": "0.0.1-security",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-changed": "^1.3.2",
    "gulp-changed-in-place": "^2.0.3",
    "gulp-cheerio": "^0.6.2",
    "gulp-css-globbing": "^0.1.8",
    "gulp-hash": "^3.1.0",
    "gulp-imagemin": "^3.0.3",
    "gulp-load-plugins": "^1.2.4",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-sass": "^2.3.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-svgmin": "^1.2.2",
    "gulp-svgo": "^1.0.3",
    "gulp-svgstore": "^6.0.0",
    "gulp-uglifycss": "^1.0.6",
    "gulp-watch": "^4.3.9",
    "jsonfile": "^2.3.1",
    "penthouse": "^0.9.12",
    "require-dir": "^0.3.0",
    "svgstore": "^1.1.0",
    "uglifycss": "0.0.21",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.15.0"
  },
  "dependencies": {}
}
